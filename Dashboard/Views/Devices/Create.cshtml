@model CreateDeviceViewModel
@{
    List<Emirate> emirates = ViewBag.Emirates;
    List<DeviceModel> deviceModels = ViewBag.DeviceModels;
    List<Shop> shops = ViewBag.Shops;
    List<User> users = ViewBag.Users;
    List<Status> statuses = ViewBag.Statuses;
}

@section Styles {
    <!-- Select2 -->
    <link rel="stylesheet" href="~/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">

}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <form asp-controller="devices" asp-action="Create" method="post">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="IMEI1">IMEI 1</label>
                            <input type="text" class="form-control" asp-for="IMEI1">
                            <span class="text-danger" asp-validation-for="IMEI1"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="IMEI2">IMEI 2</label>
                            <input type="text" class="form-control" asp-for="IMEI2">
                            <span class="text-danger" asp-validation-for="IMEI2"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SIMCardSerialNumber">SIM Serial</label>
                            <input type="text" class="form-control" asp-for="SIMCardSerialNumber">
                            <span class="text-danger" asp-validation-for="SIMCardSerialNumber"></span>
                        </div>
                        <div class="form-group">
                            <label>Application Version</label>
                            <select asp-for="ApplicationVersion" class="form-control select2bs4">
                                <option>Application Version</option>
                                <option value="1.4.6">1.4.6</option>
                                <option value="1.4.4">1.4.4</option>
                                <option value="1.4.0">1.4.0</option>
                                <option value="1.3.5">1.3.5</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Emirate</label>
                            <select asp-for="EmirateId" class="form-control select2bs4">
                                <option>Emirate</option>
                                @foreach (var emirate in emirates)
                            {
                                <option value="@emirate.Id">@emirate.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Device Model</label>
                        <select asp-for="ModelId" class="form-control select2bs4">
                            <option>Device Model</option>
                            @foreach (var deviceModel in deviceModels)
                            {
                                <option value="@deviceModel.Id">@deviceModel.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Shop</label>
                        <select asp-for="ShopId" class="form-control select2bs4">
                            <option>Shop</option>
                            @foreach (var shop in shops)
                            {
                                <option value="@shop.Id">@shop.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>User</label>
                        <select asp-for="UserId" class="form-control select2bs4">
                            <option>User</option>
                            @foreach (var user in users)
                            {
                                <option value="@user.Id">@user.FullName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                        <select asp-for="StatusId" class="form-control select2bs4">
                            <option>Status</option>
                            @foreach (var status in statuses)
                            {
                                <option value="@status.Id">@status.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary  float-right  ml-1">Submit</button>
                    <a class="btn btn-danger  float-right" asp-controller="Manufacturers" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Select2 -->
    <script src="~/plugins/select2/js/select2.full.min.js"></script>
    <script>
        $(function() {
            //Initialize Select2 Elements
            //$('.select2').select2();

            
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })
        });
    </script>
}
