@model CreateStatusViewModel
<div class="row">
    <div class="col-12">
        <div class="card">
            <form asp-controller="Statuses" asp-action="Create" method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input type="text" class="form-control" asp-for="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>                
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary  float-right  ml-1">Submit</button>
                    <a class="btn btn-danger  float-right" asp-controller="Statuses" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>